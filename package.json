{
  "name": "easy-focus",
  "private": true,
  "scripts": {
    "start": "concurrent --kill-others --names 'server:,watch: ' --prefix '{name}' 'npm run server' 'npm run watch'",
    "server": "http-server",
    "watch": "watchify -v -t [ babelify --presets [ es2015 ] ] src/main.js -o chrome/content.js"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "concurrently": "^2.2.0",
    "eslint": "^2.10.0",
    "http-server": "^0.9.0",
    "watchify": "^3.7.0"
  }
}
